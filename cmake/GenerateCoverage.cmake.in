# Generates gcov files.

file(GLOB_RECURSE _FILES RELATIVE "@CMAKE_BINARY_DIR@" "*.gcno")
file(MAKE_DIRECTORY "@CMAKE_BINARY_DIR@/gcov")

foreach( _FILE ${_FILES})
    execute_process(COMMAND "@GCOV_EXEC@"
                    "@CMAKE_BINARY_DIR@/${_FILE}"
                    WORKING_DIRECTORY "@CMAKE_BINARY_DIR@/gcov"
    )
endforeach()